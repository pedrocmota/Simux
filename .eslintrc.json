{
  "env": {
    "es2021": true
  },
  "plugins": [
    "eslint-plugin-html"
  ],
  "rules": {
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-empty-function": "off",
    "no-empty": "off",
    "no-empty-pattern": "off",
    "no-var": "off",
    "no-unused-vars": "off",
    "prefer-const": "off",
    "no-constant-condition": "off",
    "comma-dangle": [
      "warn",
      "never"
    ],
    "quote-props": [
      "warn",
      "as-needed"
    ]
  },
  "ignorePatterns": ["gui/statics/*"]
}